* {
    border: none;
    font-family: Fira Code;
    font-size: 14px;
    color: #ffffff;
    border-radius: 20px;
}

window {
	/*font-weight: bold;*/
}
window#waybar {
    background: rgba(0, 0, 0, 0);
}
/*-----module groups----*/
.modules-left {
    margin: 2px 0 0 5px;
	background-color: rgba(0,119,179,0.6);
}
.modules-center {
	background-color: rgba(0,43,51,0.85);
    margin: 2px 0 0 0;
}
.modules-right {
	background-color: rgba(0,43,51,0.85);
    margin: 2px 10px 0 0;
}
/*-----modules indv----*/
#workspaces button {
    padding: 1px 5px;
    background-color: transparent;
}
#workspaces button:hover {
    box-shadow: inherit;
	background-color: rgba(0,153,153,1);
}

/*#workspaces button.focused {*/ /*Sway*/
#workspaces button.active { /* Hyprland */
	background-color: rgba(0,43,51,0.85);
}

#clock,
#battery,
#network,
#idle_inhibitor {
    padding: 0 10px;
}
/*-----Indicators----*/
#idle_inhibitor.activated {
    color: #2dcc36;
}
#pulseaudio.muted {
    color: #cc3436;
}
#battery.charging {
    color: #2dcc36;
}
#battery.warning:not(.charging) {
	color: #e6e600;
}
#battery.critical:not(.charging) {
    color: #cc3436;
}
