* {
    border: none;
    font-family: "Fira Code";
    font-weight: bold;
    font-size: 16px;
    background: transparent;
    color: @theme_text_color;
}

#workspaces button {
    padding: 2.5px;
    border-radius: 10px;
}

/* TODO: sort out colouring */
#workspaces button.urgent {
    color: #11111b;
    background: #a6e3a1;
}

#workspaces button:hover {
    background: @theme_base_color;
}

#workspaces button.focused {
    background: #64727D;
}


#workspaces {
    padding-right: 0px;
    padding-left: 5px;
}

#clock,

#network {
    border-left: 0px;
    padding: 5px 5px;
}

#wireplumber {
    border-left: 0px;
    padding: 5px 5px;
}

#battery {
    border-left: 0px;
    padding: 5px 5px;
}
#battery.charging {
    color: #2dcc36;
}
#battery.warning:not(.charging) {
    border-radius: 20px;
	color: #cc3436;
	background-color: #e6e600;
}
#battery.critical:not(.charging) {
	color: #e6e600;
	background-color: #cc3436;
}
